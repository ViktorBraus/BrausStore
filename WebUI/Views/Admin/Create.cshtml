@model Domain.Entities.Book

@{
    ViewBag.Title = "Панель адміністратора: додавання товару";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

    <div class="panel">
        <div class="panel-heading">
            <h3>Додавання нової книги</h3>
        </div>
        @using (Html.BeginForm())
        {
            <div>
                
                @foreach (var property in ViewData.ModelMetadata.Properties)
                {
                    if (property.PropertyName != "BookId")
                    {
                        <div class="form-group">
                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @if (property.PropertyName == "Description")
                            {
                                @Html.TextArea(property.PropertyName, null, new { @class = "form-control", rows = 5 })
                            }
                            else
                            {
                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            }
                            @Html.ValidationMessage(property.PropertyName)
                        </div>
                    }
                }
            </div>
            <div class="panel-footer">
                <input type="submit" value="Додати" class="btn btn-primary" />
                @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>

